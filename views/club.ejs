<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= club.name %></title>
    <link rel="stylesheet" href="/stylesheet/preloader.css">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="../stylesheet/navbaar.css">
    <link rel="stylesheet" href="../stylesheet/club.css">
</head>
<body>
    <%- include('partials/preloader') %>

    <!-- Navbar -->
    <div class="navSlide">
        <div class="icon">
            <i class="ri-close-large-line"></i>
        </div>
        <ul class="NavLinks">
            <li><a href="/">Home</a></li>
            <li><a href="/members">Members</a></li>
            <li><a href="/clubs">Clubs</a></li>
            <li><a href="/faculty">Mentors</a></li>
            <li><a href="/gallery">Event Gallery</a></li>
            <li><a href="/login" class="loginButton">Login</a></li>
        </ul>
    </div>
    <nav>
        <div class="logo">
            <img class="image-logo" src="/image folder/Student council png.png" title="council logo" alt="Student Council Logo">
            <h1>STUDENT COUNCIL</h1>
        </div>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/members">Members</a></li>
            <li><a href="/clubs">Clubs</a></li>
            <li><a href="/faculty">Mentors</a></li>
            <li><a href="/gallery">Event Gallery</a></li>
            <i class="ri-menu-line"></i>
        </ul>
    </nav>

    <!-- Main Content -->
    <div class="container-elem">
        <div class="profile-box">
            <img class="image" src="<%= club.club_logo %>" alt="<%= club.name %> Logo">
            <div class="title-box">
                <div class="follow-us-section">
                    <h1 class="heading-drone"><%= club.name %> club</h1>
                    <a href="<%= club.instagram_url %>"><i class="ri-instagram-line"></i></a>
                </div>
                <p class="para"><%= club.mission %></p>
            </div>
        </div>

        <!-- Club Bearers -->
        <div class="club-bearer"><h1 class="heading-drone">CLUB BEARER</h1></div>
        <div class="club-bearer-card">
            <div class="club-bearer-card-content">
                <img class="image" src="<%= club.coordinator.photo_src %>" alt="<%= club.coordinator.name %>">
                <h1 class="heading"><%= club.coordinator.name %></h1>
                <span class="span">CO-ORDINATOR</span>
            </div>
            <div class="club-bearer-card-content">
                <img class="image" src="<%= club.secretary.photo_src %>" alt="<%= club.secretary.name %>">
                <h1 class="heading"><%= club.secretary.name %></h1>
                <span class="span">SECRETARY</span>
            </div>
            <div class="club-bearer-card-content">
                <img class="image" src="<%= club.assistant_secretary.photo_src %>" alt="<%= club.assistant_secretary.name %>">
                <h1 class="heading"><%= club.assistant_secretary.name %></h1>
                <span class="span">ASST. SECRETARY</span>
            </div>
        </div>

        <!-- Mission & Vision -->
        <div class="mission">
            <div class="mission-section">
                <h3 class="mission-heading">THE MISSION</h3>
                <p><%= club.mission %></p>
            </div>
            <div class="vision-section">
                <h3 class="vision-heading">THE VISION</h3>
                <p><%= club.vision %></p>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 STUDENT COUNCIL TIT. All rights reserved.</p>
    </footer>

    <!-- JavaScript -->
    <script src="javascript/navbaar.js"> </script>
    <!-- <script src="javascript/clubgallery.js"></script> -->
    <script src="/javascript/preloader.js"></script>
    </body>
    <!-- <script src="javascript/navbaar.js"></script> -->

</body>

</html>