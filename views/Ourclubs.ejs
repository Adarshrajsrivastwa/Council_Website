                width: fit-content;
            }
            .heading h1 {
                font-family: Bebrush;
                font-size: 3.2vw;
                letter-spacing: 0.8vw;
                color: #2a2a45;
                font-weight: 400;
                margin: 0;
                padding: 0.5rem 0;
                position: relative;
            }
            .heading h1::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 0;
                width: 100%;
                height: 2px;
                background: #2a2a45;
            }
            .club-grid {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
                gap: 1.5rem;
                /* padding: 2rem 0; */
                width: 100%;
            }
            .card {
                width: 200px;
                height: 200px;
                flex: 0 0 auto;
                background: transparent;
                border-radius: 50%;
                position: relative;
                overflow: hidden;
                transition: all 0.4s ease;
                box-shadow: 0 4px 15px rgba(42, 42, 69, 0.08);
            }
            .img {
                height: 100%;
                width: 100%;
                object-fit: cover;
                border-radius: 50%;
                transition: all 0.4s ease;
            }
            .textBox {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                width: 100%;
                height: 100%;
                background: rgba(42, 42, 69, 0.9);
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50%;
                opacity: 0;
                transition: all 0.4s ease;
            }
            .text {
                font-family: Gilroy-black;
                color: white;
                font-size: 1.2rem;
                padding: 1rem;
                text-align: center;
            }
            .card:hover {
                transform: translateY(-5px);
            }
            .card:hover .img {
                transform: scale(1.1);
                filter: blur(3px);
            }
            .card:hover .textBox {
                opacity: 1;
            }
            a {
                text-decoration: none;
                color: inherit;
            }
            @media (max-width: 1200px) {
                .card {
                    width: 180px;
                    height: 180px;
                }
            }
            @media (max-width: 992px) {
                .card {
                    width: 160px;
                    height: 160px;
                }
            }
            @media (max-width: 768px) {
                .card {
                    width: 150px;
                    height: 150px;
                }
            }
            @media (max-width: 576px) {
                .card {
                    width: 140px;
                    height: 140px;
                }
            }
            @keyframes pageLoad {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
            footer {
