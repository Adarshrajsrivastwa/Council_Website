            {img: "/image folder/Event Photos/IMG-20241110-WA0026.jpg"},
            
        ];

        const gallery = document.querySelector('.gallery');
        let currentImageIndex = 0;

        // Intersection Observer for gallery items
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const galleryObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = `fadeInScale 0.6s ease forwards ${index * 0.1}s`;
                    entry.target.style.visibility = 'visible';
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Create and load gallery items with scroll trigger
        function createGalleryItem(item, index) {
            const imgElement = document.createElement("div");
            imgElement.className = "gallery-item";
            imgElement.style.visibility = 'hidden'; // Hide initially
            imgElement.innerHTML = `
                <img src="${item.img}" alt="Gallery Image ${index + 1}" loading="lazy">
                <div class="gallery-actions">
                    <button class="gallery-btn view-btn" title="View">
                        <i class="ri-fullscreen-line"></i>
                    </button>
                    <button class="gallery-btn download-btn" title="Download">
                        <i class="ri-download-line"></i>
                    </button>
                    <button class="gallery-btn share-btn" title="Share">
                        <i class="ri-share-line"></i>
                    </button>
                </div>
            `;

            // Observe the gallery item
            galleryObserver.observe(imgElement);

            return imgElement;
        }

        // Initialize gallery with loading state
        function initGallery() {
            gallery.innerHTML = ''; // Clear existing items
            images.forEach((item, index) => {
                const galleryItem = createGalleryItem(item, index);
                gallery.appendChild(galleryItem);
            });
        }

        // Popup functionality
        const popup = document.querySelector('.popup');
        const popupImg = popup.querySelector('.popup-img');
        let isPopupOpen = false;

        function openPopup(imgSrc, index) {
            popupImg.src = imgSrc;
            currentImageIndex = index;
            popup.classList.add('active');
            document.body.style.overflow = 'hidden';
            isPopupOpen = true;
        }

        function closePopup() {
            popup.classList.remove('active');
            document.body.style.overflow = '';
            isPopupOpen = false;
            setTimeout(() => {
                popupImg.src = ''; // Clear source after animation
            }, 300);
        }

        // Event Handlers
        gallery.addEventListener('click', (e) => {
            const galleryItem = e.target.closest('.gallery-item');
            if (!galleryItem) return;

            const img = galleryItem.querySelector('img');
            const index = Array.from(gallery.children).indexOf(galleryItem);

            if (e.target.closest('.view-btn')) {
                openPopup(img.src, index);
            } else if (e.target.closest('.download-btn')) {
                downloadImage(img.src);
            } else if (e.target.closest('.share-btn')) {
                shareImage(img.src);
            }
        });

        // Download functionality
        function downloadImage(imgSrc) {
            const link = document.createElement('a');
            link.href = imgSrc;
            link.download = `gallery-image-${Date.now()}.jpg`;
            link.click();
        }

        // Share functionality
        async function shareImage(imgSrc) {
            try {
                if (navigator.share) {
                    await navigator.share({
                        title: 'Gallery Image',
                        text: 'Check out this image from our gallery!',
                        url: imgSrc
                    });
                } else {
                    await navigator.clipboard.writeText(imgSrc);
                    showToast('Image URL copied to clipboard!');
                }
            } catch (err) {
                console.error('Error sharing:', err);
                showToast('Unable to share image');
            }
        }

        // Toast notification
        function showToast(message) {
            const toast = document.createElement('div');
            toast.className = 'toast';
            toast.textContent = message;
            document.body.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }

        // Event Listeners
        popup.querySelector('.close-btn').addEventListener('click', closePopup);
        popup.addEventListener('click', (e) => {
            if (e.target === popup) closePopup();
        });

        // Keyboard Navigation
        document.addEventListener('keydown', (e) => {
            if (!isPopupOpen) return;
            
            switch(e.key) {
                case 'Escape':
                    closePopup();
                    break;
                case 'ArrowLeft':
                    navigateImage(-1);
                    break;
                case 'ArrowRight':
                    navigateImage(1);
                    break;
            }
        });

        // Image Navigation
        function navigateImage(direction) {
            currentImageIndex = (currentImageIndex + direction + images.length) % images.length;
            popupImg.src = images[currentImageIndex].img;
        }

        // Initialize gallery
        initGallery();

        // Handle loading state
        window.addEventListener('load', function() {
            const loader = document.getElementById('preloader');
            if (loader) {
                loader.style.display = 'none';
            }
        });
    </script>

    <style>
        /* Toast Notification Style */
        .toast {
            position: fixed;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.8);
            color: white;
            padding: 12px 24px;
            border-radius: 25px;
            z-index: 1001;
            animation: fadeInOut 3s ease;
        }

        @keyframes fadeInOut {
            0%, 100% { opacity: 0; }
            10%, 90% { opacity: 1; }
        }
