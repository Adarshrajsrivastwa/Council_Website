            /* Global Styling */
            body {
                margin: 0;
                padding: 0;
                background: linear-gradient(256deg, #FFDEE9 0%, #B5FFFC 100%);
                min-height: 100vh;
            }

            /* Event Container */
            .event-space {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
                gap: 2rem;
                padding: 2rem;
                max-width: 1400px;
                margin: 0 auto;
            }

            /* Flip Card */
            .flip-card {
                background-color: transparent;
                width: 100%;
                height: 250px;
                perspective: 1000px; /* Adds depth effect */
                font-family: sans-serif;
                /* box-shadow:  1vw 1vw 50px black; */
            }

            .title {
                font-size: 1.2rem;
                font-weight: 500;
                text-align: center;
                margin: 0;
                font-family: Bristone;
                margin-bottom: 1rem;
            }

            .flip-card-inner {
                position: relative;
                width: 100%;
                height: 100%;
                text-align: center;
                transition: transform 0.8s;
                transform-style: preserve-3d;
            }

            .flip-card:hover .flip-card-inner {
                transform: rotateY(180deg);
            }

            /* Front & Back Styling */
            .flip-card-front,
            .flip-card-back {
                box-shadow: 0 8px 14px 0 rgba(0, 0, 0, 0.2);
                position: absolute;
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                width: 100%;
                height: 100%;
                -webkit-backface-visibility: hidden;
                backface-visibility: hidden;
                /* border: 1px solid rgb(0, 0, 0); */
                border-radius: 1rem;
                overflow: hidden;
            }

            .flip-card-front {
                background: linear-gradient(256deg, #FFDEE9 0%, #B5FFFC 100%);
                color: black;
                z-index: 2; /* Ensures it's on top initially */
                padding: 1rem;
            }

            .flip-card-back {
                background: linear-gradient(256deg, #FFDEE9 0%, #B5FFFC 100%);
                color: white;
                transform: rotateY(180deg);
                z-index: 1;
            }

            .flip-card-back img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

            /* Heading Styling */
            .heading1 {
                text-align: center;
                padding: 2rem 0;
                margin-top: 6rem;
                margin-bottom: 2rem;
            }

            .heading1 h1 {
                font-family: Bebrush;
                font-size: 3.5rem;
                letter-spacing: 3px;
                color: rgb(20, 20, 20);
                margin: 0;
            }

            .heading1 h3 {
                font-family: Bristone;
                font-size: 1.8rem;
                margin-top: 0.5rem;
            }

            /* Responsive Font Size for Heading */
            @media (max-width: 768px) {
                .heading1 h1 {
                    font-size: 2.5rem;
                }

                .heading1 h3 {
                    font-size: 1.4rem;
                }

                .event-space {
                    padding: 1rem;
                    gap: 1rem;
                }
            }

            /*Pre-loader*/
            
            #videoLoader {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100vh;
                z-index: 9999;
                background: #000;
                display: flex;
                justify-content: center;
                align-items: center;
                opacity: 1;
                transition: opacity 0.5s ease-out;
            }

            #mainContent {
                display: none;
                opacity: 0;
                transition: opacity 0.5s ease-in;
            }

            #loadingVideo {
                width: 90%;
                height: 90vh;
                max-width: 1200px;
                object-fit: contain;
            }

            video {
                width: 80%;
                max-width: 800px;
            }

            /* Add this class for fade out animation */
            .fade-out {
                opacity: 0 !important;
            }

            /* Add this class for fade in animation */
            .fade-in {
                opacity: 1 !important;
            }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const video = document.getElementById('loadingVideo');
            const loader = document.getElementById('videoLoader');
            const mainContent = document.getElementById('mainContent');

            // Initialize main content
            mainContent.style.display = 'block';

            // Video end handler
            video.addEventListener('ended', handleTransition);

            // Fallback handler
            setTimeout(() => {
                if (!video.ended) handleTransition();
            }, 5000);

            function handleTransition() {
                loader.classList.add('fade-out');
                mainContent.classList.add('fade-in');
                setTimeout(() => {
                    loader.style.display = 'none';
                }, 500);
            }
        });
    </script>
