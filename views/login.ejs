          /* Update input field border styles */
          .input-field input {
            border: none;
          }

          .input-field input.error {
            border-color: rgba(220, 53, 69, 0.3);
            box-shadow: 0 0 15px rgba(220, 53, 69, 0.15);
          }

          .input-field input.default {
            border-color: rgba(255, 255, 255, 0.1);
          }

          /* Calendar Input Styling */
          .input-field.calendar-field {
            position: relative;
            overflow: visible;
          }

          .input-field.calendar-field input[type="date"] {
            width: 100%;
            height: 100%;
            padding-right: 1rem;
