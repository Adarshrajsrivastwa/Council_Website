<script>
  // Check if the user is logged in when the page loads
window.onload = function() {
  checkLoginStatus();
};

// Check login status by sending a request to the server
function checkLoginStatus() {
  fetch('/current_user')
    .then(response => response.json())
    .then(data => {
      if (data.loggedIn) {
        document.getElementById('login-btn').classList.add('hidden'); // Hide login button
        document.getElementById('profile-menu').classList.remove('hidden'); // Show profile menu
      } else {
        document.getElementById('login-btn').classList.remove('hidden'); // Show login button
        document.getElementById('profile-menu').classList.add('hidden'); // Hide profile menu
      }
    })
    .catch(error => {
      console.error('Error checking login status:', error);
    });
}

// Handle logout
function logout() {
  fetch('/logout')
    .then(response => response.json())
    .then(() => {
      // After logout, refresh the page to reset UI
      window.location.reload();
    })
    .catch(error => {
      console.error('Error logging out:', error);
    });
}

// Navigate to login page
function loginPage() {
  window.location.href = '/login';  // Redirect to login page
}



</script>
