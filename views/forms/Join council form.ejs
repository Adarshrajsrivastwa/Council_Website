<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join the Council</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #4ecdc4;
            --accent-color: #ff3366;
            --dark-bg: #0a0a0a;
            --light-text: #ffffff;
            --gray-text: rgba(255, 255, 255, 0.8);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 2rem;
            color: var(--light-text);
        }

        .form-container {
            background: rgba(255, 255, 255, 0.03);
            padding: 2.5rem;
            border-radius: 15px;
            width: 100%;
            max-width: 600px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        h2 {
            text-align: center;
            font-size: 2rem;
            margin-bottom: 2rem;
            color: var(--light-text);
            position: relative;
            padding-bottom: 1rem;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--gray-text);
            font-weight: 500;
        }

        input, select, textarea {
            width: 100%;
            padding: 12px;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: var(--light-text);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input:focus, select:focus, textarea:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 15px rgba(78, 205, 196, 0.1);
        }

        textarea {
            min-height: 120px;
            resize: vertical;
        }

        .progress-container {
            margin: 2rem 0;
        }

        .progress-bar {
            width: 100%;
            height: 6px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 3px;
            overflow: hidden;
        }

        .progress {
            height: 100%;
            width: 0;
            background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
            transition: width 0.3s ease;
        }

        .progress-text {
            text-align: center;
            color: var(--gray-text);
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        button {
            width: 100%;
            padding: 1rem;
            background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
            border: none;
            border-radius: 8px;
            color: var(--light-text);
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        button:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        @media (max-width: 768px) {
            .form-container {
                padding: 1.5rem;
            }

            h2 {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            body {
                padding: 1rem;
            }

            .form-container {
                padding: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Join the Student Council</h2>
        
        <div class="progress-container">
            <div class="progress-bar">
                <div class="progress" id="progress"></div>
            </div>
            <div class="progress-text" id="progressText">Form completion: 0%</div>
        </div>

        <form id="councilForm">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" required>
            </div>

            <div class="form-group">
                <label for="enrollment">Enrollment Number</label>
                <input type="text" id="enrollment" required>
            </div>

            <div class="form-group">
                <label for="branch">Branch</label>
                <select id="branch" required>
                    <option value="">Select Branch</option>
                    <option value="Computer Science">Computer Science</option>
                    <option value="Information Technology">Information Technology</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Mechanical">Mechanical</option>
                    <option value="Civil">Civil</option>
                </select>
            </div>

            <div class="form-group">
                <label for="year">Year of Study</label>
                <select id="year" required>
                    <option value="">Select Year</option>
                    <option value="1st Year">1st Year</option>
                    <option value="2nd Year">2nd Year</option>
                    <option value="3rd Year">3rd Year</option>
                    <option value="4th Year">4th Year</option>
                </select>
            </div>

            <div class="form-group">
                <label for="club">Club to Join</label>
                <select id="club" required>
                    <option value="">Select a Club</option>
                    <option value="Drone Society">Drone Society</option>
                    <option value="Coding Club">Coding Club</option>
                    <option value="Robotics Club">Robotics Club</option>
                    <option value="Photography Club">Photography Club</option>
                    <option value="Cyber Security Club">Cyber Security Club</option>
                    <option value="AI & ML Club">AI & ML Club</option>
                    <option value="Gaming Club">Gaming Club</option>
                    <option value="Music Club">Music Club</option>
                    <option value="Debate Club">Debate Club</option>
                    <option value="Drama Club">Drama Club</option>
                </select>
            </div>

            <div class="form-group">
                <label for="skills">Technical Skills</label>
                <input type="text" id="skills" required>
            </div>

            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" required>
            </div>

            <div class="form-group">
                <label for="why">Why do you want to join?</label>
                <textarea id="why" required></textarea>
            </div>

            <button type="submit">Submit Application</button>
        </form>
    </div>

    <script>
        const form = document.getElementById('councilForm');
        const progress = document.getElementById('progress');
        const progressText = document.getElementById('progressText');

        function updateProgress() {
            const fields = form.querySelectorAll('input, select, textarea');
            const filledFields = Array.from(fields).filter(field => field.value.trim() !== '');
            const percentage = (filledFields.length / fields.length) * 100;
            
            progress.style.width = `${percentage}%`;
            progressText.textContent = `Form completion: ${Math.round(percentage)}%`;
        }

        form.addEventListener('input', updateProgress);

        form.addEventListener('submit', (e) => {
            e.preventDefault();
            if (form.checkValidity()) {
                alert('Application submitted successfully!');
                form.reset();
                updateProgress();
            } else {
                alert('Please fill in all required fields.');
            }
        });
    </script>
</body>
</html>
